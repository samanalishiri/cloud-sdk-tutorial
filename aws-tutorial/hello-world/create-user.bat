@echo off
cls

REM create the user
REM ====================================================================================================================
set /p USERNAME=Enter username:

aws iam create-user --user-name %USERNAME%

echo:
echo User %USERNAME% created!
REM ====================================================================================================================

REM show list of all user
REM ====================================================================================================================
echo:
echo List of all users

aws iam list-users
REM ====================================================================================================================

REM show list of attached policies to the user
REM ====================================================================================================================
echo:
echo List of all policies attached to user %USERNAME%

aws iam list-attached-user-policies --user-name %USERNAME%
REM ====================================================================================================================

REM delete the user
REM ====================================================================================================================
echo:
pause

aws iam delete-user --user-name %USERNAME%

echo:
echo User %USERNAME% deleted!
REM ====================================================================================================================
