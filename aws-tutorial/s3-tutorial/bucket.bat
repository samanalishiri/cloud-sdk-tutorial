@echo off
cls

REM create the bucket
REM ====================================================================================================================
set /p USERNAME=Enter bucketname:

aws s3api create-bucket --bucket %BUCKETNAME%

echo:
echo Bucket %BUCKETNAME% created!
REM ====================================================================================================================

REM show list of all buckets
REM ====================================================================================================================
echo:
echo List of all buckets
aws s3api list-buckets
REM ====================================================================================================================

REM show list of attached policies to the bucket
REM ====================================================================================================================
echo:
echo ACL of bucket %BUCKETNAME%
aws s3api get-bucket-acl --bucket %BUCKETNAME%
REM ====================================================================================================================

REM delete the bucket
REM ====================================================================================================================
echo:
pause

aws s3api delete-bucket --bucket %BUCKETNAME%
echo:
echo Bucket %BUCKETNAME% deleted!
REM ====================================================================================================================
